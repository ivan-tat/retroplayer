ifndef S3MVARS_DEF
S3MVARS_DEF equ 1

include s3mtypes.def

_DATA segment word public use16 'DATA'

; EMM

extrn UseEMS: byte

; general module information

extrn mod_isLoaded: byte
extrn mod_Title: byte
extrn mod_TrackerName: byte

; module options

extrn modOption_ST2Vibrato: byte
extrn modOption_ST2Tempo: byte
extrn modOption_AmigaSlides: byte
extrn modOption_SBfilter: byte
extrn modOption_CostumeFlag: byte
extrn modOption_VolZeroOptim: byte
extrn modOption_AmigaLimits: byte
extrn modOption_SignedData: byte
extrn modOption_Stereo: byte

; play options

extrn playOption_ST3Order: byte
extrn playOption_LoopSong: byte

; instruments

extrn Instruments: dword
extrn InsNum: word
extrn SmpEMSHandle: word
extrn EMSSmp: byte

; patterns

extrn Pattern: word
extrn patListCount: word
extrn patListPatLength: word
extrn patListUseEM: byte
extrn patListEMHandle: word
extrn patListPatPerEMPage: byte

; song arrangment

extrn Order: byte
extrn OrdNum: word
extrn LastOrder: byte

; channels

extrn Channel: TChannel
extrn UsedChannels: byte

; initial state

extrn initState_tempo: byte
extrn initState_speed: byte
extrn initState_startOrder: word

; play state

extrn playState_songEnded: byte
extrn playState_tempo: byte
extrn playState_speed: byte
extrn playState_gVolume: byte
extrn playState_mVolume: byte

; position in song - you can change it while playing to jump arround

extrn playState_order: byte
extrn playState_pattern: byte
extrn playState_row: byte
extrn playState_tick: byte

; pattern loop

extrn playState_patLoopActive: byte
extrn playState_patLoopCount: byte
extrn playState_patLoopStartRow: byte

; pattern delay

extrn playState_patDelayCount: byte

_DATA ends

endif   ; S3MVARS_DEF
