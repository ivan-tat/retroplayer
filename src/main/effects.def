_DATA segment word public use16 'DATA'

; Play state

extrn playState_jumpToOrder_bFlag: byte
extrn playState_jumpToOrder_bPos: byte
extrn playState_patBreak_bFlag: byte
extrn playState_patBreak_bPos: byte
extrn playState_patLoop_bNow: byte
extrn playState_gVolume_bFlag: byte
extrn playState_gVolume_bValue: byte
extrn playState_patDelay_bNow: byte

; Channel state

; call 'readnotes' inside a pattern delay,
; if then ignore all notes/inst/vol !
; now some variables I added after I found out those amazing things
; about pattern delay
; save effect,parameter for pattern delay
extrn chnState_patDelay_bCommandSaved: byte
extrn chnState_patDelay_bParameterSaved: byte

extrn chnState_cur_bNote: byte
; normaly it will be a copie of es:[di], but in
; pattern delay = 0 -> ignore note
extrn chnState_cur_bIns: byte    ; the same thing for instrument
extrn chnState_cur_bVol: byte    ; and for volume
; to save portamento values :
extrn chnState_porta_flag: byte
extrn chnState_porta_wSmpPeriodOld: word
extrn chnState_porta_dSmpStepOld: dword
; a little one for arpeggio :
extrn chnState_arp_bFlag: byte

_DATA ends

EFFECTS_TEXT segment word public use16 'CODE'

extrn chn_effInit: far
extrn chn_effHandle: far
extrn chn_effTick: far
extrn chn_effCanContinue: far
extrn chn_effStop: far

EFFECTS_TEXT ends
