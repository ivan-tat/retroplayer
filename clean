#!/bin/bash
# This script must be run in GNU/Linux OR in DOS/DJGPP Bash shell.

RM='rm -f'

cleandir() {
    local DIR="$1"
    echo "Cleaning $DIR ..."
    cd $DIR
    $RM *.err
    $RM *.exe
    $RM *.map
    $RM *.obj
    $RM *.tpu
    cd $OLDPWD
}

cleandir ./src
$RM ./src/common.asm
$RM ./src/debug.asm
$RM ./src/dynarray.asm
$RM ./src/pascal.asm
$RM ./src/startup.asm
cleandir ./src/cc
cleandir ./src/cc/conio
$RM ./src/cc/conio/inp.asm
$RM ./src/cc/conio/outp.asm
cleandir ./src/cc/ctype
$RM ./src/cc/ctype/istable.asm
cleandir ./src/cc/dos
$RM src/cc/dos/d_getvec.asm
$RM src/cc/dos/d_setvec.asm
$RM src/cc/dos/dosret.asm
$RM src/cc/dos/error086.asm
$RM src/cc/dos/gtime086.asm
$RM src/cc/dos/mem086.asm
cleandir ./src/cc/errno
$RM ./src/cc/errno/errno.asm
cleandir ./src/cc/i86
$RM ./src/cc/i86/delay.asm
$RM ./src/cc/i86/disable.asm
$RM ./src/cc/i86/enable.asm
cleandir ./src/cc/malloc
$RM ./src/cc/malloc/memmax.asm
cleandir ./src/cc/stdio
$RM ./src/cc/stdio/_printf.asm
$RM ./src/cc/stdio/fclose.asm
$RM ./src/cc/stdio/fopen.asm
$RM ./src/cc/stdio/fprintf.asm
$RM ./src/cc/stdio/fread.asm
$RM ./src/cc/stdio/fsetpos.asm
$RM ./src/cc/stdio/fwrite.asm
$RM ./src/cc/stdio/printf.asm
$RM ./src/cc/stdio/snprintf.asm
$RM ./src/cc/stdio/sprintf.asm
$RM ./src/cc/stdio/vfprintf.asm
$RM ./src/cc/stdio/vprintf.asm
$RM ./src/cc/stdio/vsnprntf.asm
$RM ./src/cc/stdio/vsprintf.asm
cleandir ./src/cc/stdlib
$RM ./src/cc/stdlib/atoi.asm
$RM ./src/cc/stdlib/atol.asm
$RM ./src/cc/stdlib/fexit.asm
$RM ./src/cc/stdlib/ffree.asm
$RM ./src/cc/stdlib/fmalloc.asm
$RM ./src/cc/stdlib/getenv.asm
$RM ./src/cc/stdlib/strtol.asm
cleandir ./src/cc/string
$RM ./src/cc/string/memcmp.asm
$RM ./src/cc/string/memcpy.asm
$RM ./src/cc/string/memset.asm
$RM ./src/cc/string/strchr.asm
$RM ./src/cc/string/strcmp.asm
$RM ./src/cc/string/stricmp.asm
$RM ./src/cc/string/strlen.asm
$RM ./src/cc/string/strncmp.asm
$RM ./src/cc/string/strncpy.asm
$RM ./src/cc/string/strnicmp.asm
cleandir ./src/hw
$RM ./src/hw/dma.asm
$RM ./src/hw/hwowner.asm
$RM ./src/hw/pic.asm
$RM ./src/hw/sndctl_t.asm
$RM ./src/hw/vga.asm
cleandir ./src/hw/sb
$RM ./src/hw/sb/sbctl.asm
$RM ./src/hw/sb/sbio.asm
cleandir ./src/dos
$RM ./src/dos/ems.asm
cleandir ./src/main
$RM ./src/main/_wramp
$RM ./src/main/_wramp.inc
$RM ./src/main/_wsinus
$RM ./src/main/_wsinus.inc
$RM ./src/main/_wsquare
$RM ./src/main/_wsquare.inc
$RM ./src/main/effects.asm
$RM ./src/main/filldma.asm
$RM ./src/main/fillvars.asm
$RM ./src/main/loads3m.asm
$RM ./src/main/mixchn.asm
$RM ./src/main/mixer.asm
$RM ./src/main/mixing.asm
$RM ./src/main/musins.asm
$RM ./src/main/muspat.asm
$RM ./src/main/posttab.asm
$RM ./src/main/readnote.asm
$RM ./src/main/s3mplay.asm
$RM ./src/main/s3mvars.asm
$RM ./src/main/voltab.asm
cleandir ./src/player
$RM ./src/player/plays3m.asm
$RM ./src/player/screen.asm
$RM ./src/player/w_chn.asm
$RM ./src/player/w_dbg.asm
$RM ./src/player/w_hlp.asm
$RM ./src/player/w_inf.asm
$RM ./src/player/w_ins.asm
$RM ./src/player/w_pat.asm
$RM ./src/player/w_smp.asm

echo "Done."
